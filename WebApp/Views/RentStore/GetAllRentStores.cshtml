@model IEnumerable<BLL.DTO.RentStoreDTO>
@{ Layout = "_Layout";
       }
    <!DOCTYPE html>

    <html>
    <head>
        <title>Все магазины</title>
    </head>
    <body>
        @{
            var errorMessage = ViewBag.Message;
            if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    @errorMessage
                </div>
            }
        }

        <h3>Все магазины</h3><br />
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#rentStoreCreateModel">+</button>
        <table class="table table-bordered table-hover">
            <tr>
                <td>Название</td>
                <td>Адресс</td>
            </tr>
            @foreach (var store in Model)
            {
                <tr>
                    <td>@store.Name</td>
                    <td>@store.Building.CityName, @store.Building.StreetName, @store.Building.Number</td>
                    <td><a href="~/RentStore/ControlRentStore?id=@store.Id">Открыть управление</a></td>
                    <td><a href="~/RentStore/DeleteRentStore?id=@store.Id" class="link-danger">Удалить</a></td>

                </tr>
            }
        </table>

        <div class="modal fade" id="rentStoreCreateModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalCenterTitle">Создать магазин</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form method="post">
                            <div class="form-group">
                                <label for="client-name" class="col-form-label">Название:</label>
                                <input type="text" class="form-control" name="name" id="client-name" required>
                            </div><br />
                            <div class="form-group">
                                <label for="city-name" class="col-form-label">Город:</label>
                                <input type="text" class="form-control" name="city" id="city-name" required>
                            </div><br />
                            <div class="form-group">
                                <label for="street-name" class="col-form-label">Улица:</label>
                                <input type="text" class="form-control" name="street" id="street-name" required>
                            </div><br />
                            <div class="form-group">
                                <label for="building" class="col-form-label">Номер дома:</label>
                                <input type="number" class="form-control" name="number" id="building" required>
                            </div><br />
                            <input type="submit" value="Создать" class="btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </body>
</html>
